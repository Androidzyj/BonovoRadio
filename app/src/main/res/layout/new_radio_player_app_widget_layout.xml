<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/n_widget_view_container"
    android:background="@drawable/radio_player_app_widget_background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/n_widget_text_fm_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/n_widget_text_number"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:text="@string/widget_loading"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/n_widget_image_play_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/radio_player_app_widget_stop_background" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/n_widget_image_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/radio_player_app_widget_next_background" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/n_widget_image_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/btnfinebackward"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/n_widget_image_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/btnfineforward"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/linearLayout" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:visibility="gone"
        android:src="@drawable/radio_pointer" />


</RelativeLayout>